QToolBar::handle
{
     spacing: 3px; /* spacing between items in the tool bar */
     background: url(:/stylesheet/stylesheet/handle.png);
}

QMenu::separator
{
    height: 2px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #2C2C2C, stop: 0.5 #2A2A2A, stop: 0.6 #424242, stop:1 #686868);
    color: white;
    padding-left: 4px;
    margin-left: 10px;
    margin-right: 5px;
}

QProgressBar
{
    border: 2px solid grey;
    border-radius: 5px;
    text-align: center;
}

QProgressBar::chunk
{
    background-color: #198ed7;
    width: 2.15px;
    margin: 0.5px;
}

QTabBar::tab
{
    color: #b1b1b1;
    border: 1px solid #444;
    border-bottom-style: none;
    background-color: #323232;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 3px;
    padding-bottom: 2px;
    margin-right: -1px;
}

QTabWidget::pane
{
    border: 1px solid #444;
    top: 1px;
}

QTabBar::tab:last
{
    margin-right: 0; /* the last selected tab has nothing to overlap with on the right */
    border-top-right-radius: 3px;
}

QTabBar::tab:first:!selected
{
	margin-left: 0px; /* the last selected tab has nothing to overlap with on the right */
    border-top-left-radius: 3px;
}

QTabBar::tab:!selected
{
    color: #b1b1b1;
    border-bottom-style: solid;
    margin-top: 3px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #212121, stop:.4 #343434);
}

QTabBar::tab:selected
{
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    margin-bottom: 0px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #313131, stop:0.4 #444444, stop:0.2 #444444, stop:0.1 #009dff);
}

QTabBar::tab:!selected:hover
{
    /*border-top: 2px solid #009dff;
    padding-bottom: 3px;*/
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    background-color: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:1 #212121, stop:0.4 #343434, stop:0.2 #343434, stop:0.1 #009dff);
}

QRadioButton::indicator:checked, QRadioButton::indicator:unchecked
{
    color: #b1b1b1;
    background-color: #323232;
    border: 1px solid #b1b1b1;
    border-radius: 6px;
}

QRadioButton::indicator:checked
{
    background-color: qradialgradient(
        cx: 0.5, cy: 0.5,
        fx: 0.5, fy: 0.5,
        radius: 1.0,
        stop: 0.25 #009dff,
        stop: 0.3 #323232
    );
}

QCheckBox::indicator
{
    color: #b1b1b1;
    background-color: #323232;
    border: 1px solid #b1b1b1;
    width: 9px;
    height: 9px;
}

QRadioButton::indicator
{
    border-radius: 6px;
}

QRadioButton::indicator:hover, QCheckBox::indicator:hover
{
    border: 1px solid #009dff;
}

QCheckBox::indicator:checked
{
    image:url(:/stylesheet/stylesheet/checkbox.png);
}

QCheckBox::indicator:disabled, QRadioButton::indicator:disabled
{
    border: 1px solid #444;
}

QSlider::groove:horizontal
{
	background: QLinearGradient( x1:0, y1:0, x2:0, y2:1, stop: 0.0 #121212, stop: 0.2 #282828, stop: 1 #484848);
    height: 8px;
	border: 1px solid #222222;
}
QSlider::handle:horizontal
{
	background: QLinearGradient(x1:0, y1:0, x2:0, y2:1, stop:0 #198ed7, stop:0.5 #17adb5 stop:1 #2fd1ff);
	height: 12px;
	width: 8px;
	border: 1px solid #222222;
	margin: -4px 0;
}

QSlider::groove:vertical
{
	background: QLinearGradient( x1:0, y1:0, x2:1, y2:0, stop: 0.0 #121212, stop: 0.2 #282828, stop: 1 #484848);
    width: 8px;
	border: 1px solid #222222;
}
QSlider::handle:vertical
{
	background: QLinearGradient(x1:0, y1:0, x2:1, y2:0, stop:0 #198ed7, stop:0.5 #17adb5 stop:1 #2fd1ff);
	width: 12px;
	height: 8px;
	border: 1px solid #222222;
	margin: 0 -4px;
}

QSlider::handle:hover:horizontal, QSlider::groove:hover:horizontal, QSlider::handle:hover:vertical, QSlider::groove:hover:vertical
{
	border: 1px solid #009dff;
}
